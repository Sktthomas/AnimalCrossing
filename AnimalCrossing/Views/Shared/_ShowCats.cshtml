@model List<Cat>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var item in Model)
{
    <div class="card col-12 col-sm-6 col-lg-3 col-xl-2">
        <img src="@Url.Content(item.ProfilePicture)" class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-subtitle text-dark">@item.Gender.Value</p>
            <br />
            <p class="card-text">Description: @item.Description</p>
            <p class="card-text">Species: @item.Species.Name</p>
            <hr />
            <a asp-controller="Animal" asp-action="Details" asp-route-id="@item.CatId" class="btn btn-outline-primary">Details</a>
            <div class="btn-group mt-auto" role="group">
                <a asp-controller="Animal" asp-action="Edit" asp-route-id="@item.CatId" class="btn btn-outline-primary">Edit</a>
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deletemodal" data-Name="@item.Name" data-Id="@item.CatId">Delete</button>
            </div>
        </div>
    </div>
}
