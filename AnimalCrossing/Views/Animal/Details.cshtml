@model AnimalCrossing.Models.ViewModels.AnimalCatVM;
@{
    ViewData["Title"] = "Details";
}

<h1>Details about @Model.Cat.Name</h1>

<div class="container">
    <div class="row">
        <div class="col-xl-6 col-sm-12">
            <hr />
            <img src="@Url.Content(Model.Cat.ProfilePicture)" class="img-thumbnail" alt="Profile Picture">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cat.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cat.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cat.Gender)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cat.Gender)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cat.Species.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cat.Species.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cat.BirthDate)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Cat.BirthDate != null) {
                        @Model.Cat.BirthDate.Value.ToLongDateString()}
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cat.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cat.Description)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>


