@{
}

<form asp-controller="Animal" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-12 col-sm-6 col-lg-3 col-xl-2">
                <img src="@Url.Content(item.ProfilePicture)" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Species.Name</p>
                    <hr />
                        <div class="btn-group mt-auto" role="group">
                        <a asp-controller="Animal" asp-action="Edit" asp-route-id="@item.CatId" class="btn btn-outline-primary">Edit</a>
                        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deletemodal" data-Name="@item.Name" data-Id="@item.CatId">Delete</button>
                            </div>
                    </div>
                </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal" tabindex="-1" role="dialog" id="deletemodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You are about to delete this cat. Are you sure?</p>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="cat-id" />
                <button type="button" class="btn btn-outline-danger" id="deletebutton" data-name>Delete Cat</button>
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#deletemodal').on('show.bs.modal', function (event) {
    console.log('Hello!')
        var button = $(event.relatedTarget) // Button that triggered the modal
        var catId = button.data('id')
  var catName = button.data('name') // Extract info from data-* attributes
  // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
  // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        console.log(catName)
        console.log(catId)
        modal.find('.modal-title').text('Deleting ' + catName)
        modal.find('#cat-id').val(catId)
    })
    $('#deletebutton').click(function (e) {
        var catId = $("#cat-id").val();
        console.log(catId)
         $.ajax({
                type: "POST",
                url: "/Animal/Delete/"+catId,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (msg) {
                    window.location.reload();
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
    })
</script>